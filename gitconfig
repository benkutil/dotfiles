[user]
	email = thisis@benkutil.com
	name = Ben Kutil
    signingkey = 089F326F
[core]
    editor = subl -w
    whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol
    autocrlf = input
	excludesfile = /Users/ktb/.gitignore_global
[commit]
    gpgsign = true
[gpg]
    program = gpg
[rerere]
    enabled = true
[rebase]
    autosquash = true
[push]
    default = simple
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    header = white
    added = green
    changed = yellow bold
    untracked = white dim
    renamed = pink
[alias]
    co = checkout
    ci = commit
    s = status -s
    st = status
    pu = push
    pl = pull
    pub = "!f() { git push ${1:-origin} `git symbolic-ref HEAD`; }; f"
    br = branch
    df = diff
    lp = log -p
    lps = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lgp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    who = shortlog -s --
    edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; subl `f`"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    prune-all = !git remote | xargs -n 1 git remote prune
    serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    kcon = !gitk --left-right HEAD...MERGE_HEAD
    changes=diff --name-status -r
    diffstat=diff --stat -r
    lc = log ORIG_HEAD.. --stat --no-merges
    stache = !git -c commit.gpgsign=false stash
[status]
	submoduleSummary = true
[url "git@github.com:"]
    insteadOf = https://github.com/
[http]
	postBuffer = 524288000
